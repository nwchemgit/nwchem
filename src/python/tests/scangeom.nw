start scangeom

# Scan C2V geometries for water printing out the energy

basis noprint
  H library sto-3g
  O library sto-3g
end

python noprint
  from __future__ import print_function
  
  print('   y     z       energy ')
  print(' ----- ----- --------------')
  y = 1.2
  elo = 0.0
  while y <= 1.61:
     z = 1.0
     while z <= 1.21:
        input_parse('''
           geometry noprint units atomic
              O 0   0   0
              H 0  %f -%f
              H 0 -%f -%f
           end
        ''' % (y, z, y, z))
        energy = task_energy('scf')
        if (energy < elo):
           elo = energy
           ylo = y
           zlo = z
        print(' %5.2f %5.2f %13.8f' % (y, z, energy))
        z = z + 0.1
     y = y + 0.1
  print(' ')
  print(' Lowest energy =',elo,' at y=',ylo,', z =',zlo)
  print(' ')
end

print none

task python
